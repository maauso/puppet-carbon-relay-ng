
[Unit]
Description=Starts and stops carbon-relay-ng on this system
Documentation=https://github.com/graphite-ng/carbon-relay-ng/tree/master/docs
Wants=network-online.target
After=network-online.target

[Service]
User=<%= @user %> 
Group=<%= @group %>
Type=simple
Restart=on-failure
#WorkingDirectory=/var/run/carbon-relay-ng
ExecStart=/usr/bin/carbon-relay-ng /etc/graphite-go-relay/carbon-relay-ng.ini
LimitNOFILE=102400
TimeoutStopSec=60

[Install]
WantedBy=multi-user.target
